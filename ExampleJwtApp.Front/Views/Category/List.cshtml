@model List<ExampleJwtApp.Front.Models.CategoryListResponseModel>
@{
    Layout = "_Layout";
}
<div class="container my-4 pt-4">
    <a asp-action="Create" asp-contoller="Category">Kaydet</a>
    <table class="table table-striped table-bordered ">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Definition</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Id</th>
                        <td>@item.Definition</td>
                        <th>
                            <a asp-action="Remove" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                        </th>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">Herhangi bir data bulunamadı</td>
                </tr>
            }
        </tbody>
    </table>
</div>